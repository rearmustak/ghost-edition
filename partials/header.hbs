<header id="site-header" class="site-header">
    <div class="header-inner">
        <div class="header-brand">
            <a class="logo" href="{{@site.url}}">
                {{#if @site.logo}}
                    <img class="logo-image" src="{{@site.logo}}" alt="{{@site.title}}">
                {{else}}
                    <span class="logo-text">{{@site.title}}</span>
                {{/if}}
            </a>

            <div class="burger">
                <div class="burger-bar"></div>
                <div class="burger-bar"></div>
            </div>
        </div>

        <nav class="header-nav">
            {{#if @site.navigation}}
                {{navigation}}
            {{/if}}
        </nav>

        <div class="header-actions">
            <div class="social">

                <a class="social-item social-item-github"
                    href="https://github.com/bretfisher" target="_blank"
                    rel="noopener noreferrer" aria-label="GitHub">
                    {{> icons/github}}
                </a>

                <a class="social-item social-item-youtube"
                    href="https://www.youtube.com/BretFisherDockerandDevOps" target="_blank"
                    rel="noopener noreferrer" aria-label="YouTube">
                    {{> icons/youtube}}
                </a>

                <a class="social-item social-item-twitter"
                    href="{{twitter_url @site.twitter}}" target="_blank"
                    rel="noopener noreferrer" aria-label="Twitter">
                    {{> icons/twitter}}
                </a>

                <a class="social-item social-item-discord"
                    href="https://devops.fan" target="_blank"
                    rel="noopener noreferrer" aria-label="Discord">
                    {{> icons/discord}}
                </a>

                <a class="social-item social-item-instagram"
                    href="https://www.instagram.com/bretfisher/" target="_blank"
                    rel="noopener noreferrer" aria-label="Instagram">
                    {{> icons/instagram}}
                </a>

                <a class="social-item social-item-linkedin"
                    href="https://www.linkedin.com/in/bretefisher" target="_blank"
                    rel="noopener noreferrer" aria-label="LinkedIn">
                    {{> icons/linkedin}}
                </a>
            </div>

            {{#if @member}}
                <button class="button-text menu-item members-account" data-portal="account">Account</button>
            {{else}}
                {{!-- <button class="button-text menu-item members-login" data-portal="signin">Login</button> --}}
            {{/if}}
        </div>
    </div>
</header>